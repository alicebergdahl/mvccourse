{% extends 'base.html.twig' %}

{% block title %}View Book{% endblock %}

{% block body %}
<div class="container">
    <h1>{{ book.name }}</h1>
    <a href="{{ path('edit_book', {'id': book.id}) }}">Edit</a>
    <p>Author: {{ book.author }}</p>
    <p>ISBN: {{ book.ISBN }}</p>
    <p><img src="{{ asset('img/' ~ book.image) }}" alt="Cover image of {{ book.name }}" height="300"></p>
</div>
{% endblock %}